{
  "include": ["src/**/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true /* Enables experimental support for ES7 decorators. */,
    "lib": ["ES2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2019",
    "baseUrl": ".",
    "types": ["jest"],
    "paths": {
      "@ccc/generated": ["./src/generated"],
      "@ccc/utils": ["./src/utils"]
    }
  },
  "exclude": [
    "node_modules/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
    //"**/*.test.ts"
  ]
}
